{
  "manifest_version": 2,
  "name": "Copy Pasta Extension",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "pasta.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": ["storage"]
}
